<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/blurTimesTitle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/blur_times"
        android:gravity="center"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blurTimesSeekBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="192dp"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/blurTimesSeekBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@id/blurTimesTitle"
        app:layout_constraintTop_toBottomOf="@+id/blurTimesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blurTimesTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/blurStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="@string/blur_step"
        android:gravity="center"
        android:paddingStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/blurStepSeekBar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blurTimesTitle"
        />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/blurStepSeekBar"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:max="100"
        app:layout_constraintBottom_toTopOf="@id/blurStepTitle"
        app:layout_constraintTop_toBottomOf="@+id/blurStepTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blurStepTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>